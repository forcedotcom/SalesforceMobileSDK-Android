<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Text">
    </style>

    <!-- these 2 aren't used in any layouts but are used by ServerPickerActivity -->
    <style name="Text.HostName" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Text.HostUrl" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#888D91</item>
    </style>

    <style name="SalesforceSDK.ServerPicker.DropShadow">
        <item name="android:layout_width">@dimen/sf__server_picker_layout_width</item>
        <item name="android:layout_height">@dimen/sf__server_picker_layout_height</item>
      	<item name="android:background">@drawable/sf__oauth_container_dropshadow</item>
		<item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="SalesforceSDK.ServerPicker.Container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/sf__server_picker_bg_width</item>
        <item name="android:layout_height">@dimen/sf__server_picker_bg_height</item>
        <item name="android:background">@color/sf__server_picker_bg</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="SalesforceSDK.ServerPicker.Title">
        <item name="android:layout_width">@dimen/sf__title_text_width</item>
        <item name="android:layout_height">@dimen/sf__title_text_height</item>
        <item name="android:textSize">@dimen/sf__title_text_size</item>
        <item name="android:textColor">@color/sf__title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/sf__login_content_header</item>
	</style>

    <style name="SalesforceSDK.ServerPicker.Spacer">
		<item name="android:layout_height">@dimen/sf__server_picker_separator_height</item>
		<item name="android:background">@color/sf__title_bg</item>
    </style>
    
    <style name="SalesforceSDK.Login.Container" parent="SalesforceSDK.ServerPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">@dimen/sf__login_layout_width</item>
        <item name="android:layout_height">@dimen/sf__login_layout_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/sf__oauth_container_dropshadow</item>
        <item name="android:padding">@dimen/sf__login_padding</item>
    </style>
    
    <style name="SalesforceSDK.Header">
    </style>
    
    <style name="SalesforceSDK.Header.Container">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">@dimen/sf__header_height</item>
		<item name="android:background">@drawable/sf__toolbar_background</item>    
    </style>
    
    <style name="SalesforceSDK.Header.SeparatorLine">
		<item name="android:layout_width">@dimen/sf__header_separator_width</item>
		<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="SalesforceSDK.Header.Separator">
        <item name="android:layout_marginRight">@dimen/sf__header_separator_margin_right</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">@dimen/sf__header_separator_layout_width</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="SalesforceSDK.Header.Text">
        <item name="android:textColor">#656B71</item>
	   	<item name="android:textSize">18sp</item>
	   	<item name="android:layout_width">wrap_content</item>
	   	<item name="android:layout_height">wrap_content</item>
	   	<item name="android:layout_centerVertical">true</item>
	   	<item name="android:clickable">true</item>
    </style>
    
    <style name="SalesforceSDK.Header.Text.RightMargin">
	   	<item name="android:layout_marginRight">@dimen/sf__header_separator_margin_right</item>
    </style>
    
    <style name="SalesforceSDK.Header.Text.LeftMargin">
        <item name="android:layout_marginLeft">@dimen/sf__text_view_margin_left</item>
	</style>
	
    <style name="SalesforceSDK.Header.ProgressBar">
	   	<item name="android:layout_width">wrap_content</item>
	   	<item name="android:layout_height">wrap_content</item>
	   	<item name="android:layout_centerVertical">true</item>
	   	<item name="android:layout_marginRight">@dimen/sf__progress_bar_margin_right</item>
		<item name="android:indeterminateDrawable">@drawable/sf__progress_spinner</item>
    </style>
    
    <style name="SalesforceSDK.Header.Reload">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/sf__image_view_width</item>
        <item name="android:src">@drawable/sf__header_refresh_states</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:clickable">true</item>
		<item name="android:layout_alignParentRight">true</item>
    </style>
    
</resources>
