<?xml version="1.0" encoding="utf-8"?>

	<!--
		focus on the layout itself to prevent the edit controls from gaining
		on load.. clearFocus() doesn't work
	-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/sf__layout_root" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="@dimen/sf__server_layout_padding" android:focusable="true"
	android:focusableInTouchMode="true">

	<EditText android:id="@+id/sf__picker_custom_label"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_marginTop="@dimen/sf__server_picker_margin_top" android:layout_marginLeft="@dimen/sf__server_picker_margin_left"
		android:layout_marginRight="@dimen/sf__server_picker_margin_right" android:inputType="text"
		android:imeOptions="actionNext" />

	<EditText android:id="@+id/sf__picker_custom_url" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_marginTop="@dimen/sf__server_picker_margin_top"
		android:layout_marginLeft="@dimen/sf__server_picker_margin_left" android:layout_marginRight="@dimen/sf__server_picker_margin_right"
		android:layout_marginBottom="@dimen/sf__server_picker_margin_bottom" android:inputType="text"
		android:imeOptions="actionDone" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="@dimen/sf__server_layout_padding">

		<Button android:id="@+id/sf__apply_button" android:text="@string/sf__server_url_default_apply"
			android:layout_weight="1" android:layout_margin="@dimen/sf__server_button_margin"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
		/>

		<Button android:id="@+id/sf__cancel_button" android:text="@string/sf__server_url_default_cancel"
			android:layout_weight="1" android:layout_margin="@dimen/sf__server_button_margin"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
		/>

	</LinearLayout>

</LinearLayout>