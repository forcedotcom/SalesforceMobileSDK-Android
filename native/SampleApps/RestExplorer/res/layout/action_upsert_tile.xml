<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="100dp">

		<TextView android:layout_width="fill_parent"
			android:layout_weight="1" android:layout_height="fill_parent"
			android:textColor="#000000" android:gravity="top" android:text="@string/upsert_title" />

		<Button android:id="@+id/upsert_button" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="2"
			android:onClick="onUpsertClick" android:text="@string/upsert_button" />
	</LinearLayout>


	<EditText android:id="@+id/upsert_object_type_text"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="#000000" android:hint="@string/object_type_hint"
		android:maxLines="1" android:imeOptions="actionNext" />

	<EditText android:id="@+id/upsert_external_id_field_text"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="#000000" android:hint="@string/external_id_field_hint"
		android:maxLines="1" android:imeOptions="actionNext" />

	<EditText android:id="@+id/upsert_external_id_text"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="#000000" android:hint="@string/external_id_hint"
		android:maxLines="1" android:imeOptions="actionNext" />

	<EditText android:id="@+id/upsert_fields_text"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:textColor="#000000" android:hint="@string/fields_hint"
		android:gravity="top" android:imeOptions="actionDone" />

</LinearLayout>


