<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="100dp">

		<TextView android:layout_width="fill_parent"
			android:layout_weight="1" android:layout_height="fill_parent"
			android:textColor="#000000" android:gravity="top" android:text="@string/retrieve_title" />

		<Button android:id="@+id/retrieve_button" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="2"
			android:onClick="onRetrieveClick" android:text="@string/retrieve_button" />
	</LinearLayout>

	<EditText android:id="@+id/retrieve_object_type_text"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="#000000" android:hint="@string/object_type_hint"
		android:maxLines="1" android:imeOptions="actionNext" />

	<AutoCompleteTextView android:id="@+id/retrieve_object_id_text"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="#000000" android:hint="@string/object_id_hint"
		android:maxLines="1" android:imeOptions="actionNext"
		android:completionThreshold="1" />

	<EditText android:id="@+id/retrieve_field_list_text"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:textColor="#000000" android:hint="@string/field_list_hint"
		android:gravity="top" android:imeOptions="actionDone" />

</LinearLayout>


