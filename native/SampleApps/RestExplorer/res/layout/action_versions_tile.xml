<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="100dp">

		<TextView android:layout_width="fill_parent"
			android:layout_weight="1" android:layout_height="fill_parent"
			android:textColor="#000000" android:gravity="top" android:text="@string/versions_title" />

		<Button android:id="@+id/versions_button" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="2"
			android:onClick="onGetVersionsClick" android:text="@string/versions_button" />
	</LinearLayout>

</LinearLayout>
